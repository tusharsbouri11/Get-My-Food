<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_285sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_3sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    app:cardCornerRadius="14dp"
    android:elevation="5dp">

    <LinearLayout
        android:id="@+id/mostlyItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="14dp">

        <ImageView
            android:id="@+id/most_image"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_158sdp"
            android:scaleType="centerCrop"
            android:src="@mipmap/sample"
            android:contentDescription="Item Image"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="4dp"
        android:layout_marginTop="@dimen/_4sdp">

        <ImageView
            android:id="@+id/most_type"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/veg" />

        <TextView
            android:id="@+id/most_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="@dimen/_12ssp"
            android:maxLines="3"
            android:maxWidth="@dimen/_177sdp"
            android:layout_weight="1"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/most_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 364"
            android:gravity="end"
            android:layout_marginStart="4dp"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/most_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Description"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:textSize="@dimen/_11ssp"/>

