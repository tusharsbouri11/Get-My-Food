<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_285sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_3sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    app:cardCornerRadius="14dp"
    android:elevation="5dp">

    <LinearLayout
        android:id="@+id/home_category_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="14dp">

            <ImageView
                android:id="@+id/home_category_image"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_158sdp"
                android:scaleType="centerCrop"
                android:src="@mipmap/sample"
                android:contentDescription="Item Image"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/home_category_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category Name"
                    android:layout_marginStart="4dp"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/home_category_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category Description"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:textSize="@dimen/_11ssp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/right_arrow"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>