<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    app:cardCornerRadius="14dp"
    android:elevation="5dp">

    <LinearLayout
        android:id="@+id/cart_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/cart_type"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/veg" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cart_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:layout_marginStart="4dp"
                android:text="Item Name"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/_10ssp"
                app:autoSizeMaxTextSize="@dimen/_18ssp"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

        <ImageView
            android:id="@+id/cart_del"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingEnd="4dp"
            android:src="@drawable/xmark1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cart_minus"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30ssp"
            android:layout_weight="1"
            android:text="â€”"
            android:textAlignment="center"
            android:textSize="@dimen/_12ssp"/>

            <TextView
                android:id="@+id/cart_multiplier"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cart_plus"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30ssp"
            android:layout_weight="1"
            android:text="+"
            android:textAlignment="center"
            android:textSize="@dimen/_12ssp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cart_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginEnd="4dp"
                android:gravity="end"
                android:text="Rs 364"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="@dimen/_10ssp"
                app:autoSizeMaxTextSize="@dimen/_14ssp"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />
    </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>